<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffcc00"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:gravity="left"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:paddingTop="10dip"
            android:layout_marginLeft="20dp"
            android:text="作成者"
            android:textStyle="bold" />
        <!--android:paddingTop="6dip"-->
        <!--android:paddingBottom="2dip"-->

        <TextView
            android:id="@+id/work_sitter"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="-42dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textSize="15sp"/>

        <TextView
            android:gravity="left"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dip"
            android:layout_marginLeft="40dp"
            android:text="対象者"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <!--android:layout_marginRight="35dp"-->

        <TextView
            android:id="@+id/work_name"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="-44dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textSize="15sp"/>



        <TextView
            android:gravity="right"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="勤務日"
            android:paddingTop="10dip"
            android:layout_marginLeft="50dp"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/work_work_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="-60dp"
            android:text="内容"
            android:textSize="15sp"/>

        <TextView
            android:gravity="right"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="登録日時"
            android:paddingTop="10dip"
            android:layout_marginLeft="15dp"
            android:textSize="17sp"
            android:paddingBottom="5dip"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/work_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:maxLength="10"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="-65dp"
            android:lines="2"
            android:text="내용"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="業務種類  :  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/work_content_type"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="業務内容 "
            android:background="@drawable/xml_border"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/work_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="내용"
            android:textSize="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="伝達事項"
            android:background="@drawable/xml_border"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="薬  :  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/work_medicine_name"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="服薬日数  :  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/work_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="服薬終了  :  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/work_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="薬の服薬時間  :  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="내용"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <Button
            android:id="@+id/work_returnBtn"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#ffcc00"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="目録" />
    </LinearLayout>

</LinearLayout>